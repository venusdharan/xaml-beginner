    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,720,0,10" TextWrapping="Wrap" Text="***Add to Orders***" Width="655"/>
        <TextBlock x:Name="textBlock_Copy" Margin="0,0,0,602" TextWrapping="Wrap" Text="Order Items:" HorizontalAlignment="Right" Width="301" Height="38" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="textBlock_Copy1" Margin="701,0,0,602" TextWrapping="Wrap" Text="Special Orders:" HorizontalAlignment="Left" Width="655" Height="38" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="textBlock_Copy2" Margin="0,720,10,10" TextWrapping="Wrap" Text="***Submit Orders***" HorizontalAlignment="Right" Width="655"/>
    </Grid>
</Page>

